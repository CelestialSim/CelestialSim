{
    "$schema": "https://dotnet.github.io/docfx/schemas/v1.0/docfx.json",
    "metadata": [
        {
            "src": [
                {
                    "src": "../",
                    "files": [
                        "CelestialSim.csproj"
                    ]
                }
            ],
            "dest": "docfx/api",
            "filter": "filterConfig.yml",
            "globalNamespaceId": "Global",
            "properties": {
                "TargetFramework": "net8.0"
            }
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "toc.yml",
                    "index.md",
                    "getting-started.md",
                    "introduction.md"
                ]
            },
            {
                "files": [
                    "docfx/api/**.yml",
                    "docfx/api/**.yaml"
                ]
            }
        ],
        "dest": "docfx/site",
        "globalMetadata": {
            "_appTitle": "CelestialSim Docs (DocFX Preview)",
            "_appFooter": "Generated by DocFX",
            "_disableToc": false,
            "_disableTocFilter": false
        },
        "template": [
            "default",
            "modern",
            "template"
        ]
    }
}