{
  "$schema": "https://dotnet.github.io/docfx/schemas/v1.0/docfx.json",
  "metadata": [
    {
      "src": [
        {
          "src": "../",
          "files": ["CelestialSim.csproj"]
        }
      ],
      "dest": "docfx/api",
      "properties": {
        "TargetFramework": "net8.0"
      }
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "toc.yml",
          "index.md",
          "getting-started.md",
          "introduction.md",
          "content/**.md"
        ]
      },
      {
        "files": [
          "docfx/api/**.yml",
          "docfx/api/**.yaml"
        ],
        "dest": "docfx/api"
      }
    ],
    "dest": "docfx/site",
    "globalMetadata": {
      "_appTitle": "CelestialSim API Reference",
      "_appFooter": "Generated by DocFX"
    },
    "template": [
      "statictoc"
    ]
  }
}
